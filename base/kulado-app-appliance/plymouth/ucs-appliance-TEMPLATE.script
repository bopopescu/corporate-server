# scale to half the window size
fun scaleHalf(xSize, ySize) {

	size[0] = 0;
	size[1] = 0;
	if (xSize > ySize) {
		size[0] = Window.GetWidth() / 2;
		size[1] = ySize * size[0] / xSize;
		return size;
	} else {
		size[1] = Window.GetHeight() / 2;
		size[0] = xSize * size[1] / ySize;
		return size;
	}
}

