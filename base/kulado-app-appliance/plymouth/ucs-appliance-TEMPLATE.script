		if (!string) string = "";
		local.prompt = global.dialog.prompt;
		local.list = StringToList(string, 80);
		local.msg;
		for (i=0; i < PASSWORD_PROMPT_LINES; i++) {
			if (!list[i]) list[i] = "";
			msg = Image.Text(list[i],${FONT_COLOR} 1, password.font);
			prompt[i].SetImage(msg);
		}
